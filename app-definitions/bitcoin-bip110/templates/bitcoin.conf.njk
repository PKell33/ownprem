# Bitcoin Knots + BIP-110 Configuration
# Generated by Ownprem
# BIP-110: Temporary data restrictions - https://bip110.org/

{% if network == "testnet" %}
testnet=1
{% elif network == "signet" %}
signet=1
{% elif network == "regtest" %}
regtest=1
{% endif %}

{% if txindex %}
txindex=1
{% endif %}
{% if prune > 0 %}
prune={{ prune }}
{% endif %}

dbcache={{ dbcache | default(450) }}
listen=1
maxconnections={{ maxconnections | default(125) }}
{% if blocksonly %}
blocksonly=1
{% endif %}

server=1
rpcuser={{ rpcuser }}
rpcpassword={{ rpcpassword }}
rpcbind=0.0.0.0
rpcallowip=127.0.0.1
rpcallowip=10.0.0.0/8
rpcallowip=172.16.0.0/12
rpcallowip=192.168.0.0/16

zmqpubrawblock=tcp://0.0.0.0:28332
zmqpubrawtx=tcp://0.0.0.0:28333
zmqpubhashblock=tcp://0.0.0.0:28332
zmqpubhashtx=tcp://0.0.0.0:28333

printtoconsole=1
disablewallet=1
