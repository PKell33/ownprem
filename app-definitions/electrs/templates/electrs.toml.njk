# Electrs Configuration
# Generated by Ownprem - Do not edit manually

# Network
{% if network == "testnet" %}
network = "testnet"
{% elif network == "signet" %}
network = "signet"
{% elif network == "regtest" %}
network = "regtest"
{% else %}
network = "bitcoin"
{% endif %}

# Bitcoin Core RPC
daemon_rpc_addr = "{{ daemon_rpc_host }}:{{ daemon_rpc_port }}"
daemon_p2p_addr = "{{ daemon_rpc_host }}:8333"
auth = "{{ daemon_rpc_user }}:{{ daemon_rpc_pass }}"

# Electrum RPC
electrum_rpc_addr = "0.0.0.0:50001"

# HTTP monitoring
http_addr = "0.0.0.0:3002"

# Logging
log_filters = "{{ log_filters | default('INFO') }}"

# Indexing
index_batch_size = {{ index_batch_size | default(10) }}
index_lookup_limit = 1000

# Performance
jsonrpc_timeout = 15
