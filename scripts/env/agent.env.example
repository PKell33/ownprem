# Ownprem Agent Environment Configuration
# Copy to /etc/ownprem/agent.env and customize

# Unique identifier for this server
# Examples: core, server-1, server-2
SERVER_ID=core

# URL of the Ownprem orchestrator
# For the core server: http://localhost:3001
# For remote agents: https://ownprem.yourdomain.com
ORCHESTRATOR_URL=http://localhost:3001

# Authentication token for connecting to orchestrator
# Generate via the orchestrator API or CLI
AUTH_TOKEN=

# Directory where apps are installed
APPS_DIR=/opt/ownprem/apps

# Logging level (trace, debug, info, warn, error, fatal)
LOG_LEVEL=info
