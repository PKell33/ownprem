# Ownprem Orchestrator Environment Configuration
# Copy to /etc/ownprem/orchestrator.env and customize

# Server port
PORT=3001

# Database path
DATABASE_PATH=/var/lib/ownprem/db.sqlite

# Data directories
DATA_PATH=/var/lib/ownprem
APPS_PATH=/opt/ownprem/apps
APP_DEFINITIONS_PATH=/opt/ownprem/repo/app-definitions
LOGS_PATH=/var/log/ownprem

# REQUIRED: Encryption key for secrets (32+ characters)
# Generate with: openssl rand -base64 32
SECRETS_KEY=

# REQUIRED: JWT secret for authentication (32+ characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=

# CORS origin (set to your domain in production)
# Example: https://foundry.yourdomain.com
CORS_ORIGIN=

# Logging level (trace, debug, info, warn, error, fatal)
LOG_LEVEL=info
